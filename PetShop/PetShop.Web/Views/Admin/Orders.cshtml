@using System.Web.Optimization;
@model List<PetShop.Web.Models.OrderView>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/Admin Layout/_AdminLayout.cshtml";
    var OrdersList = ViewBag.Orders;
}

<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Orders List</h2>
                    <p class="pageheader-text">View and manage orders</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Orders</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Orders Table</h5>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>User ID</th>
                                        <th>Date Created</th>
                                        <th>Total Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var order in Model)
                                        {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>@order.UserId</td>
                                                <td>@order.OrderDate</td>
                                                <td>@order.Total</td>
                                                <td>@order.Status.ToString()</td>
                                                <td>
                                                    <a href="@Url.Action("OrderManage", "Admin", new { orderId = order.Id })" class="btn btn-primary">Manage</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>