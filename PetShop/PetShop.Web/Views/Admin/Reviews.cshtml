@model List<PetShop.Web.Models.AdminReviewView>

@{
    ViewBag.Title = "Reviews";
    Layout = "~/Views/Shared/Admin Layout/_AdminLayout.cshtml";
}



<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <!-- Page Header -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Review Management</h2>
                </div>
            </div>
        </div>
        <!-- Review Table -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Review Table</h5>
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (Model != null && Model.Any())
                            {
                                <table class="table table-striped table-bordered first">
                                    <thead>
                                        <tr>
                                            <th>Product Image</th>
                                            <th>Product Title</th>
                                            <th>Username</th>
                                            <th>Description</th>
                                            <th>Rating</th>
                                            <th>Date Posted</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var review in Model)
                                        {
                                            <tr>
                                                <td><img src="data:image;base64,@review.ProductImage" alt="@review.ProductTitle" style="max-height: 75px;" /></td>
                                                <td>@review.ProductTitle</td>
                                                <td>@review.Username</td>
                                                <td>@review.Description</td>
                                                <td>@review.Rating</td>
                                                <td>@review.DatePosted</td>
                                                <td><a href="@Url.Action("DeleteReview", "Admin", new {id = review.Id})" class="btn btn-danger">Delete</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            }
                            else
            {
                <h3>There are no Reviews</h3>
            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

